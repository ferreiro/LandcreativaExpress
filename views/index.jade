extends layout

block content

	.slider
		// Buttons for select the slide number
		ul.slider-selector

		// Buttons to go previous and right on slide
		ul.slider-navigation

			li.slider-navigation-left
				a
					span.icon-angle-left
			li.slider-navigation-right
				a
					span.icon-angle-right

		// Slides of the slider	
		ul.slider-slides
			//-- <li> last class is the effect (fading, barTop, square)

			//-- Single Slide
			li.slider-slides-singleSlide.fading
				//- Content of one slide
				.slider-slides-singleSlide-content
					.slider-slides-singleSlide-content-minilogo
						div
					h2.slider-slides-singleSlide-content-title Bienvenido a Landcreativa
					p.slider-slides-singleSlide-content-text Expertos en Diseño web, diseño gráfico y marketing digital.
					a(href="/nosotros").slider-slides-singleSlide-content-link Descúbrenos

				//- White mask
				.slider-slides-singleSlide-whitemask
				.slider-slides-singleSlide-wallpaper
					div.blurred(style='background-image:url(/images/desk.jpg);')

			//-- Single Slide
			li.slider-slides-singleSlide.fading
				//- Content of one slide

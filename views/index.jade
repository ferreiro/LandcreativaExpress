extends layout

block content

	.slider#slider
		// Buttons for select the slide number
		ul.slider-selector

		// Buttons to go previous and right on slide
		ul.slider-navigation

			li.slider-navigation-left
				a
					span.icon-angle-left
			li.slider-navigation-right
				a
					span.icon-angle-right

		// Slides of the slider	
		ul.slider-slides
			//-- <li> last class is the effect (fading, barTop, square)

			//-- Single Slide
			li.fading.slider-slides-singleSlide
				//- Content of one slide
				.slider-slides-singleSlide-content
					.slider-slides-singleSlide-content-minilogo
						div
					h2.slider-slides-singleSlide-content-title Bienvenido a Landcreativa
					p.slider-slides-singleSlide-content-text Expertos en Diseño web, diseño gráfico y marketing digital.
					a(href="/nosotros").slider-slides-singleSlide-content-link Descúbrenos

				//- White mask
				.slider-slides-singleSlide-whitemaskIntense

				//- Wallpaper mask
				.slider-slides-singleSlide-wallpaper
					div.blurred(style='background-image:url(/images/desk.jpg);')
			
			//-- Single Slide
			li.fading.slider-slides-singleSlide
				//- Content of one slide
				.slider-slides-singleSlide-content
					.whiteContent
						h2.slider-slides-singleSlide-content-title ¿Tu web en wordpress?<br /> ¡Desde <span style="text-decoration: line-through;">490€</span> 390€!
						p.slider-slides-singleSlide-content-text Date prisa porque esta promoción termina el 30 de Septiembre de 2015.
						a(href="/servicios").slider-slides-singleSlide-content-link ¡Quiero más información!
 
				.slider-slides-singleSlide-wallpaper
					div.blurred(style='background-image:url(/images/wordpress.jpg);')
			
			//-- Single Slide
			li.fading.slider-slides-singleSlide
				//- Content of one slide
				.slider-slides-singleSlide-content
					.whiteContent
						h2.slider-slides-singleSlide-content-title Oferta verano:<br /> 15% en Pack Gold y pack premium
						p.slider-slides-singleSlide-content-text Hasta el 30/Octubre 2015, disfruta de un 15% en pack Gold o premium.
						a(href="/servicios/particulares").slider-slides-singleSlide-content-link ¡Quiero más información!
	
				.slider-slides-singleSlide-wallpaper
					div(style='background-image:url(/images/wordpress.jpg);')
			
			//-- Single Slide
			li.fading.slider-slides-singleSlide
				//- Content of one slide
				.slider-slides-singleSlide-content
					.whiteContent
						h2.slider-slides-singleSlide-content-title ¿Quieres ahorrarte en <br />tu diseño web?
						p.slider-slides-singleSlide-content-text Newsletter by Landcreativa
						p.slider-slides-singleSlide-content-text Apúntate a nuestro newsletter y recibe las mejores promociones y ofertas en tu correo.
						a(href='http://landcreativa.us8.list-manage.com/subscribe/post?u=e36c74a488cae8a92e7872fb3&amp;id=6baea7a6c9', target='_blank').slider-slides-singleSlide-content-link ¡Subscribirme!
	
				//- Black mask
				.slider-slides-singleSlide-blackmask

				.slider-slides-singleSlide-wallpaper
					div(style='background-image:url(/images/desktop3.jpg);')
 
block extraScripts
	script(type='text/javascript').
		$('#slider .slider-slides').DDSlider({

			prevSlide: '.slider-navigation-left',
			nextSlide: '.slider-navigation-right',
			selector: '.slider-selector'

		});